
a incluir no nginx.conf
stream {
    upstream mysql3306 {
        hash $remote_addr consistent;
        server 192.168.50.2:3306 weight=5 max_fails=3 fail_timeout=30s;
    }
	
	 server {
        listen 3306;
        proxy_connect_timeout 10s;
        proxy_timeout 200s;
        proxy_pass mysql3306;
        #proxy_pass http://db;
    }
}
